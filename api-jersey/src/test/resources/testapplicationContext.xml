<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mahaService" class="com.yahoo.maha.api.jersey.example.ExampleMahaService" factory-method="getMahaService">
        <constructor-arg value="test"/>
    </bean>
    <bean id="baseRequest" class="com.yahoo.maha.api.jersey.example.ExampleRequest" factory-method="getRequest"/>
    <bean id="exceptionHandler" class="com.yahoo.maha.api.jersey.GenericExceptionMapper" scope="singleton" />
    <bean id="requestValidator" class="com.yahoo.maha.api.jersey.NoopRequestValidator"/>
    <import resource="classpath:maha-jersey-context.xml" />

</beans>
